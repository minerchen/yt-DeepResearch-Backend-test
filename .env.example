# Environment Configuration for Deep Research AI Agent Backend
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=8080
ENVIRONMENT=development

# Supabase Configuration (Optional - for database features)
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# API Keys (Optional - can be provided via frontend)
# These are just examples - replace with your actual API keys if needed
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here
GROQ_API_KEY=your_groq_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Search API Configuration
SEARCH_API=tavily

# Model Configuration
RESEARCH_MODEL=openai:gpt-4.1
SUMMARIZATION_MODEL=openai:gpt-4.1-mini
COMPRESSION_MODEL=openai:gpt-4.1
FINAL_REPORT_MODEL=openai:gpt-4.1

# Research Configuration
MAX_RESEARCHER_ITERATIONS=6
MAX_CONCURRENT_RESEARCH_UNITS=5
MAX_REACT_TOOL_CALLS=10
MAX_CONTENT_LENGTH=50000

# Output Configuration
RESEARCH_MODEL_MAX_TOKENS=10000
SUMMARIZATION_MODEL_MAX_TOKENS=8192
COMPRESSION_MODEL_MAX_TOKENS=8192
FINAL_REPORT_MODEL_MAX_TOKENS=10000

# General Configuration
MAX_STRUCTURED_OUTPUT_RETRIES=3
ALLOW_CLARIFICATION=true
